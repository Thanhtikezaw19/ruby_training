<p style="color: green"><%= notice %></p>
<%= link_to "Users", users_path, :class => "users-btn" %>
<%= link_to "Posts", posts_path, :class => "posts-btn" %>
<%= link_to "Logout", logout_path, :class => "logout-btn" %>

<h1>Post List </h1>
<%= link_to "Create Post", new_user_post_path(@posts), :class => "create-btn" %>
<%= link_to "Send Post List", send_posts_path %>
<div class=table-div>
<table>
  <tr>
  <th>Title</th>
  <th>Description</th>
  <th>Flag?</th>
  <th>Action</th>
  </tr>
  <% @posts.each do |post| %>
  <tr>
  <td><%= post.title %></td>
  <td><%= post.description %></td>
  <td><%= post.public_flag %></td>
  <td><%= button_to "Delete this Post", [post.user, post], method: :delete %></td>
  </tr>
  <% end %>
</table>
</div>

<h2>Import Posts</h2>

<%= form_tag import_posts_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>
